    } elseif {$command == "time"} {
      msg $chan "guess what time it is guys!"
      puthelp "TOPIC $chan :Its party time"
      msg $chan "and you say bots are useless... geeezzz"
    } elseif {$command == "bonk" && [lindex $text 1] == ""} {
      msg $chan "ACTION wonders if damian is bonkable?!?"
    } elseif {$command == "bonk" && [lindex $text 1] != ""} {
